{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["import", "jsx-a11y", "react"],
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["off", "windows"],
    "max-len": [
      "error",
      {
        "code": 80,
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-alert": "error",
    "no-cond-assign": ["error", "always"],
    "no-console": [
      "warn",
      {
        "allow": ["info", "warn", "error"]
      }
    ],
    "no-debugger": "error",
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "import/no-unresolved": [
      2,
      {
        "caseSensitive": false
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "[iI]gnored"
      }
    ],
    "no-var": "error",
    "no-warning-comments": [
      "warn",
      {
        "terms": ["todo", "hack", "xxx", "fixme", "review"],
        "location": "anywhere"
      }
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "quotes": ["error", "double"],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "semi": ["warn", "always"]
  }
}
